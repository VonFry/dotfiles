{ config, pkgs, ... }:

{
  environment.systemPackages = with pkgs; [ krb5 heimdal ];
  krb5 = {
    enable = true;
    realms = {
      "<realm>" = {
        admin_server = "<host>";
	kdc = "<host>";
      };
    };
    libdefaults = {
      default_realm = "<realm>";
    };
    extraConfig = 
      ''
      [logging]
      kdc = FILE:/var/log/krb5kdc.log
      admin_server = FILE:/var/log/kadmin.log
      default = FILE:/var/log/krb5lib.log
      '';
  };
}
