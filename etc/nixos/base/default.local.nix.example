{ config, pkgs, ... }:

{
  # boot.loader

  # system.stateVersion

  nix.gc = {
    automatic = false;
    options = "+5";
    dates = "Sun 19:00";
  };

  services.openssh =  {
    enable = false;
    allowSFTP = false;
    passwordAuthentication = false;
    permitRootLogin = "prohibit-password";
    extraConfig =
      ''
      ClientAliveInterval 60
      ClientAliveCountMax 4
      '';
  };

  security = {
    sudo.extraConfig = "Defaults timestamp_timeout=30 ";
    pam.enableSSHAgentAuth = true;
  };
}
