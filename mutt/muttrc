set editor="nvim"

set edit_headers = yes
set use_from = yes
set charset = UTF-8
set use_domain = no

# Use offline tools, these are not necessary.
# set header_cache = ~/.cache/mutt_header
# set message_cachedir = ~/.cache/mutt

set sort = "threads"
set sort_aux = "reverse-date"
set change_folder_next = yes

set folder = "~/.mail"
set sidebar_visible = yes
bind index ,c sidebar-open
bind index ,C sidebar-open
bind index ,p sidebar-prev
bind index ,P sidebar-prev-new
bind index ,n sidebar-next
bind index ,N sidebar-next-new
source ~/.mutt/mailboxes
source ~/.mutt/vonfry/default
